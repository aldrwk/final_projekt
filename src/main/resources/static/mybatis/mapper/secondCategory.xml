<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.final_project.category_second.SecondCategoryMapper">

    <select id="findAll" resultType="SecondCategoryDomain" resultMap="categoryMap">
        select first_cate_num, sec_cate_name from second_category;
    </select>
    <select id="findById" resultType="SecondCategoryDomain" resultMap="categoryMap">
        select first_cate_num, sec_cate_name from second_category where sec_cate_num = '#{id}';
    </select>
    <select id="findByName" resultType="int" parameterType="Map">
        select sec_cate_num from second_category where sec_cate_name = #{categoryName} and first_cate_num = #{firstCategoryNum};
    </select>
    <select id="findByFirstCategory" resultType="SecondCategoryDomain" resultMap="categoryMap">
        select sec_cate_num, sec_cate_name from second_category where first_cate_num = #{num};
    </select>



    <resultMap id="categoryMap" type="SecondCategoryDomain">
        <result column="sec_cate_num" property="secCateNum" />
        <result column="first_cate_num" property="firstCateNum" />
        <result column="sec_cate_name" property="secCateName" />
    </resultMap>
</mapper>