    <!--    </select>-->

    <insert id="insert" parameterType="productDomain">
        insert into product
        values (null, #{hostNum}, #{title}, #{content}, #{address}, #{addressDetail}, #{secCateNum},
                #{thumnail}, #{producRegitDate}, #{producUpdateDate})
    </insert>
    
    <select id="findProductNum" resultType="int">
        select produc_num from product where host_num = #{hostNum} order by produc_num desc LIMIT 1
    </select>

    <select id="countInThisMonth" resultType="int" parameterType="Map">
        select count(distinct rd.produc_num) from product p natural join reservation_dates rd where host_num = #{hostNum} and reserv_date like #{thisMoth}
   </select>


